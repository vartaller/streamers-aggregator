model Streamer {
  id        Int      @id @default(autoincrement())
  fullName  String   @unique
  img       String
  info      String
  platform  String
  likes     Int?     @default(0)
  dislikes  Int?     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Streamer")
}
